<%- include('partials/feedheader') -%>
<div class="container">
    <div class="row mt-5">
      <ul class="col-6 list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li>
            
                <div class="card mb-3 ">
                    <div class="row g-0 text-bg-light">
                      <div class="col-md-4 ">
                        <img src="<%=posts[i].image%>" class="img-fluid rounded-start" alt="...">
                      </div>
                      <div class="col-md-8">
                        <div class="card-body ">
                            <a href="/post/<%=posts[i]._id%>"><h5 class="card-title"><%=posts[i].question%></h5></a>
                          <p class="card-text"><%=posts[i].description%></p>
                          <p class="card-text"><small class="text-muted">Created by <%=posts[i].user%></small></p>
                        </div>
                      </div>
                    </div>
                  </div>
            
          </li><hr>
        <% } %>
        </ul>
        <div class="col-6">
            <img src="https://i.ibb.co/5r3WYGb/undraw-online-message.png" alt="#" class="img-fluid border-bottom">
            <span class="text-muted row justify-content-center">github | linkedln | twitter </span>
           
        </div>
    </div>
    
  </div> 
<%- include('partials/footer') -%>
